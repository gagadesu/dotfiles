"$schema" = 'https://starship.rs/config-schema.json'
add_newline = false
command_timeout = 1500

format = """
{{- if ne .hostname "mbp" }}
$os\
{{- end }}
$username\
$hostname\
$directory\
$git_branch\
$git_status\
$aws\
$c\
$cmake\
$conda\
$docker_context\
$gcloud\
$golang\
$java\
$kotlin\
$kubernetes\
$lua\
$nix_shell\
$nodejs\
$package\
$php\
$python\
$rlang\
$ruby\
$rust\
$swift\
$terraform\
\n$character
"""
right_format = """$time"""

[os]
format = '[$symbol](bold white) '   
disabled = false

