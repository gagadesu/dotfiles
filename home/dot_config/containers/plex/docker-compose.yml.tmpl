services:
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    restart: always
    network_mode: host
    environment:
      - PUID=${UID}
      - PGID=${GID}
      - TZ=${TZ}
      - VERSION=docker
    volumes:
      - config:/config:rw
      - /mnt/media:/media

volumes:
  config:
