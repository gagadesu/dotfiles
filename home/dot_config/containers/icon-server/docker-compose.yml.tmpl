services:
  icon-server:
    build: .
    container_name: icon-server
    networks:
      - proxy
    volumes:
      - ./icons:/srv/icons
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.icon-server.rule=HostRegexp(`{service:[a-z0-9]+}.icons.${MY_DOMAIN_NAME}`)"
      - "traefik.http.routers.icon-server.entrypoints=https"
      - "traefik.http.routers.icon-server.tls.certresolver=myresolver"
      - "traefik.http.services.icon-server.loadbalancer.server.port=80"
      - "traefik.docker.network=proxy"

networks:
  proxy:
    external: true
